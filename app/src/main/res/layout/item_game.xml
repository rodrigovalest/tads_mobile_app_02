<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp">

    <TextView
        android:id="@+id/textViewGameName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Nome do Jogo"
        android:textStyle="bold"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/textViewGameCompany"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Empresa"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/textViewGameName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/textViewGameGenre"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="GÃªnero"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/textViewGameCompany"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
